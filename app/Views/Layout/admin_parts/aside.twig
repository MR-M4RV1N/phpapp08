<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/LTE/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>{{ user }}</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>

            <li {% if sidebar is defined and sidebar == 'home' %}class="active"{% endif %}>
                <a href="/admin">
                    <i class="fa fa-home"></i> <span>Home</span>
                    <span class="pull-right-container"></span>
                </a>
            </li>

            <li {% if sidebar is defined and sidebar == 'editor' %}class="active"{% endif %}>
                <a href="/admin/editor/cat">
                    <i class="fa fa-edit"></i> <span>Editor</span>
                    <span class="pull-right-container"></span>
                </a>
            </li>

            {% if sidebar is defined and sidebar == 'categories' %}
                <li>
                    <li class="menu-open active">
                        <a href="/admin/categories">
                            <i class="fa fa-th"></i>
                            <span>Categories</span>
                            <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                        </a>
                        <ul class="treeview-menu" style="display:block">

                            {% for c in categories %}
                                <li>
                                    <a href="/admin/cat_category/{{ c.id }}" {% if sub_categories is defined and cat == c.id %}style="color:white;"{% endif %}>
                                        <i class="fa fa-circle-o"></i>
                                        {{ c.title }}
                                    </a>
                                    {% if sub_categories is defined and cat == c.id %}
                                        <ul class="treeview-menu" style="display:block">
                                            {% for s in sub_categories %}
                                                <li>
                                                    <a href="/admin/sub_category/{{ c.id }}/{{ s.id }}" {% if sub_sub_categories is defined and sub == s.id %}style="color:white;"{% endif %}>
                                                        <i class="fa fa-circle-o"></i>
                                                        {{ s.title }}
                                                    </a>
                                                    {% if sub_sub_categories is defined and sub == s.id %}
                                                        <ul class="treeview-menu" style="display:block">
                                                            {% for ss in sub_sub_categories %}
                                                                <li><a href="/admin/sub_sub_category/{{ c.id }}/{{ s.id }}/{{ ss.id }}" {% if subsub is defined and subsub == ss.id %}style="color:white;"{% endif %}><i class="fa fa-circle-o"></i>{{ ss.title }}</a></li>
                                                            {% endfor %}
                                                        </ul>
                                                    {% endif %}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                </li>
            {% else %}
                <li>
                    <a href="/admin/categories">
                        <i class="fa fa-th"></i>
                        <span>Categories</span>
                        <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                    </a>
                </li>
            {% endif %}


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>